{
  "tests": [
    {
      "name": "Test user registration",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "register",
        "email": "test@example.com",
        "password": "testpassword123",
        "name": "Test User"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "token": "string",
        "user": {
          "email": "string",
          "name": "string"
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test login with valid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "email": "test@example.com",
        "password": "testpassword123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "token": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test missing required fields",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "register",
        "email": "test@example.com"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
